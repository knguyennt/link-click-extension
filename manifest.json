{
  "manifest_version": 3,
  "name": "Click Hint",
  "version": "1.0",
  "description": "A browser extension built with Vue.js for clicking with keyboard only",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "images/maid.png",
    "32": "images/maid.png",
    "64": "images/maid.png",
    "128": "images/maid.png"
  }
}
